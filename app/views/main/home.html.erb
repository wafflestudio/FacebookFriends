<% if @permission %>
  <%= link_to "Where are my friends?", friends_path %>
  <%= link_to "Signout", signout_path %>
<% else %>
  <%= link_to "Signin", @oauth.url_for_oauth_code(:permissions => ["publish_stream", "read_requests", "read_stream, user_activities"]) %>
<% end %>

<% if false %>
  <h3>Friends List</h3>
  <ul>
    <% @friends.each_with_index do |friend, i| %>
      <li><%= "[#{i + 1}] #{friend['name']}(#{friend['id']})" %></li>
    <% end %>
  </ul>
<% end %>
